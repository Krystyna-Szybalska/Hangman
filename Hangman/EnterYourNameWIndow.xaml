<controls:AdonisWindow x:Class="Hangman.EnterYourNameWIndow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
        xmlns:local="clr-namespace:Hangman"
        mc:Ignorable="d"
        Title="Save Score" SizeToContent="WidthAndHeight" ResizeMode="NoResize" >

    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}" />
    </Window.Style>
    
    <StackPanel>
        <TextBlock Text="Enter your name:" Margin="10"/>
        <TextBox Name="EnterYourNameTextBox" MinWidth="150" TextWrapping="Wrap" Margin="10 0 10 0"/>
        <Button Name="SaveToHighScoreButton" Width="75" Content="Save" Margin="10" Click="SaveToHighScoreButton_Click"/>
    </StackPanel>
</controls:AdonisWindow>
